{
  "manifest_version": 3,
  "name": "APEX Purchaser",
  "version": "3.0.0",
  "description": "Simple APEX account automation tool",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://dashboard.apextraderfunding.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "APEX Purchaser"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dashboard.apextraderfunding.com/member"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}